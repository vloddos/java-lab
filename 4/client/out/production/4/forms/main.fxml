<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--<Label fx:id="lrole" GridPane.columnIndex="6" GridPane.rowIndex="1"/>-->
<?import javafx.scene.control.Label?>
<GridPane hgap="5" vgap="5" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="client.Controller">

    <TableView fx:id="result_table" GridPane.columnIndex="1" GridPane.columnSpan="6" GridPane.rowIndex="1"
               GridPane.rowSpan="3"
               minWidth="600" maxWidth="600"/>

    <VBox spacing="5" GridPane.columnIndex="7" GridPane.rowIndex="1">
        <Button fx:id="bexit" onAction="#exit" text="exit"/>
        <Button fx:id="bauthor" onAction="#requestAuthorship" text="request authorship"/>

        <HBox spacing="5">
            <Button fx:id="binsert" text="+"/>
            <Button fx:id="bdelete" text="-"/>
            <Button fx:id="bupdate" text="change"/>
        </HBox>
    </VBox>

    <Label fx:id="lrole" GridPane.columnIndex="7" GridPane.rowIndex="2"/>

    <Button text="request" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <fx:define>
        <ToggleGroup fx:id="request_group"/>
    </fx:define>
    <RadioButton text="select" GridPane.columnIndex="2" GridPane.rowIndex="4" toggleGroup="$request_group"/>
    <RadioButton text="delete" GridPane.columnIndex="3" GridPane.rowIndex="4" toggleGroup="$request_group"/>
    <RadioButton text="update" GridPane.columnIndex="4" GridPane.rowIndex="4" toggleGroup="$request_group"/>

    <Button onAction="#addOrCondition" text="OR" GridPane.columnIndex="5" GridPane.rowIndex="4"/>
    <Button text="AND/OR" GridPane.columnIndex="6" GridPane.rowIndex="4"/>

    <ScrollPane hbarPolicy="ALWAYS" maxHeight="300"
                minWidth="600" maxWidth="600"
                vbarPolicy="ALWAYS" GridPane.columnIndex="1"
                GridPane.columnSpan="6" GridPane.rowIndex="5">
        <HBox fx:id="hconds"/>
    </ScrollPane>
</GridPane>